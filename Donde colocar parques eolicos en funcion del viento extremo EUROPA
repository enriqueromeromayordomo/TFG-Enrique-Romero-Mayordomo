import pandas as pd
import matplotlib.pyplot as plt
import cartopy.crs as ccrs
import cartopy.feature as cfeature

df = pd.read_csv("F:/extremoscsv/total_extremos.csv")

umbral_duracion = df['duracion_media'].quantile(0.1)  
umbral_severidad = df['severidad_media'].quantile(0.1) 

df['optimo_eolico'] = (df['duracion_media'] <= umbral_duracion) & (df['severidad_media'] <= umbral_severidad)

fig = plt.figure(figsize=(12, 8))
ax = plt.axes(projection=ccrs.PlateCarree())
ax.set_extent([-30, 50, 35, 75], crs=ccrs.PlateCarree())

ax.add_feature(cfeature.LAND, facecolor='lightgray')
ax.add_feature(cfeature.OCEAN, facecolor='lightblue')
ax.add_feature(cfeature.BORDERS, linewidth=0.5)
ax.add_feature(cfeature.COASTLINE, linewidth=0.5)

gl = ax.gridlines(draw_labels=True, linewidth=0.3, color='gray', alpha=0.5)
gl.top_labels = False
gl.right_labels = False

scatter = ax.scatter(df['lon'], df['lat'], c=df['optimo_eolico'], cmap='coolwarm', s=20)
plt.title("Zonas Potenciales para Parques Eólicos (Baja Severidad y Duración de Viento Extremo)", fontsize=13)
plt.show()
